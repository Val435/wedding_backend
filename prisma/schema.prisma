datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Guest {
  id          Int       @id @default(autoincrement())
  fullName    String
  attending   Boolean? // null = no confirmado, true = sí, false = no
  confirmedAt DateTime? // cuándo confirmó
  note        Note?     @relation(fields: [noteId], references: [id])
  noteId      Int?      @unique
  Group       Group?    @relation(fields: [groupId], references: [id])
  groupId     Int?
}

model Note {
  id        Int      @id @default(autoincrement())
  message   String   @db.VarChar(280)
  createdAt DateTime @default(now())
  guest     Guest?
}

model Group {
  id     Int     @id @default(autoincrement())
  name   String // Ej: "Familia Portillo"
  guests Guest[]
}

model GalleryPhoto {
  id           String    @id @default(uuid())
  fileUrl      String    @db.VarChar(500)
  thumbnailUrl String?   @db.VarChar(500)
  fileType     FileType
  userName     String?   @db.VarChar(100)
  message      String?   @db.Text
  fileSize     Int?
  mimeType     String?   @db.VarChar(50)
  width        Int?
  height       Int?
  duration     Int?      // solo para videos (en segundos)
  uploadedAt   DateTime  @default(now())
  isApproved   Boolean   @default(true)

  @@index([fileType])
  @@index([uploadedAt(sort: Desc)])
}

enum FileType {
  image
  video
}
